<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cc.jeongmin.community_poke.ui.ProfileEditActivity"
    android:background="#e7e7e7">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarlayout_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_profile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title_text_profile"
                    android:layout_width="100dp"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center"
                    android:text="프로필 수정"
                    android:textSize="20sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:id="@+id/finish_button_profile"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/check32" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <View
        android:id="@+id/divier_editprofile"
        android:layout_width="160dp"
        android:layout_height="5px"
        android:layout_below="@+id/appbarlayout_profile"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent" />




        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_mypage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/appbarlayout_profile"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"/>


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/image_camera"
            android:src="@drawable/ic_action_camera"
            android:layout_alignBottom="@+id/profile_image_mypage"
            android:layout_alignEnd="@+id/profile_image_mypage" />


        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/name_text_mypage"
            android:text="Riome"
            android:textSize="25sp"
            android:background="#ffffff"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/profile_image_mypage"/>


</RelativeLayout>
